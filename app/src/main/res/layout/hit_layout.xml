<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="434dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/fooddetails_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已打荷"
            android:textColor="#fff23030"
            android:textSize="16sp"
            />
        <TextView
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总耗时20分钟，超时5分钟"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/vv"
        android:layout_below="@+id/fooddetails_layout_rl"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_below="@+id/vv"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="211dp"
            android:layout_height="211dp" />
        <LinearLayout
            android:layout_marginLeft="11dp"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:background="@drawable/lin_ranidus"
                android:layout_width="34dp"
                android:text="加菜"
                android:textSize="11dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginTop="16dp"
                android:text="香菜"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/dish_bacground"
                android:layout_width="34dp"
                android:textSize="11sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginTop="16dp"
                android:text="蒜"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/dish_bacground"
                android:layout_width="34dp"
                android:textSize="11sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginTop="16dp"
                android:text="香菜"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/dish_bacground2"
                android:layout_width="34dp"
                android:textSize="11sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginTop="47dp"
                android:text="主料"
                android:textColor="#999999"
                android:gravity="center"
                android:layout_width="34dp"
                android:textSize="16sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginTop="47dp"
                android:text="辅料"
                android:textColor="#999999"
                android:gravity="center"
                android:layout_width="34dp"
                android:textSize="16sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginTop="16dp"
                android:text="调料"
                android:textColor="#999999"
                android:gravity="center"
                android:layout_width="34dp"
                android:textSize="16sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginTop="16dp"
                android:text="口味"
                android:textColor="#999999"
                android:gravity="center"
                android:layout_width="34dp"
                android:textSize="16sp"
                android:layout_height="21dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="9dp"
                android:layout_width="match_parent"
                android:text="陆地神仙菜-东波五花肉"
                android:textSize="19sp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="49dp"
                android:layout_marginTop="11dp"
                android:text="不要香菜"
                android:textColor="#00A0E9"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginLeft="49dp"
                android:layout_marginTop="16dp"
                android:text="多加蒜 5g"
                android:textColor="#00A0E9"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginLeft="49dp"
                android:layout_marginTop="16dp"
                android:text="鱼豆腐5g*2 、象拔蚌5g*1 、韭菜5g*2 、茴香5g*1 、肥肠5g*10鸭肠5g*4  "
                android:textColor="#F7A008"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginLeft="49dp"
                android:layout_marginTop="47dp"
                android:text="香菇 50g、牛肉丸 50g、素肠 50g、金针菇 100g、豆腐泡 150g、虾排 150g"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginLeft="49dp"
                android:layout_marginTop="47dp"
                android:text="生菜 500g、粉丝500g"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginLeft="49dp"
                android:layout_marginTop="16dp"
                android:text="秘制酱料 50g、高汤200g"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_width="34dp"
                android:textSize="16sp"
                android:layout_height="21dp" />
            <TextView
                android:layout_marginLeft="49dp"
                android:layout_marginTop="16dp"
                android:text="贼辣"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_width="34dp"
                android:textSize="16sp"
                android:layout_height="21dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>