<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="16dp"
    android:layout_marginTop="16dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/allitem_rv_ap_ap_item_dishname"
        android:text="香菜"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/dish_bacground"
        android:layout_width="26dp"
        android:textSize="8sp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/allitem_rv_ap_ap_item_dishmessage"
        android:textColor="#009fe8"
        android:layout_toRightOf="@+id/allitem_rv_ap_ap_item_dishname"
        android:layout_centerVertical="true"
        android:text="不要香菜"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:singleLine="false"
        android:textSize="14sp"
        android:ellipsize="none"
        android:layout_marginLeft="5dp"
        android:maxLines="5"
        android:layout_height="match_parent" />
</RelativeLayout>