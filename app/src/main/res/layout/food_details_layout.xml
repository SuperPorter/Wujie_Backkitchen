<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/titlebar_layout"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <TextView
            android:drawableLeft="@mipmap/time_icon"
            android:layout_marginLeft="10dp"
            android:text="估清材料"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="白菜"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        >
        <TextView
            android:text="操作"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="序号"
            android:layout_height="match_parent" />
        <TextView
            android:text="菜品"
            android:layout_width="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:text="材料替换"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/food_details_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">
        <com.txd.hzj.uicode.SingleButton.SmoothCheckBox
            android:id="@+id/food_details_allbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            app:color_checked="@color/red"/>
        <TextView
            android:layout_toRightOf="@+id/food_details_allbutton"
            android:text="全选"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:background="#f7b451"
                android:text="设置材料替换"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_alignParentRight="true"
                android:background="#f13030"
                android:text="确认提交"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>