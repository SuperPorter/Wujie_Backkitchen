<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.txd.hzj.wujie_backkitchen">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:resizeableActivity="true"
        android:maxAspectRatio="2.4"
        tools:ignore="UnusedAttribute">
        <meta-data
            android:name="design_width_in_dp"
            android:value="1280"/>
        <meta-data
            android:name="design_height_in_dp"
            android:value="1920"/>
        <!--全部限制只能横屏-->
        <activity android:name=".UI.Activity.Login.Back_kitchen_Login"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.Activity.HomeActivity"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".UI.Activity.OrderdetailsActivity"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".UI.Activity.Ingredients_replacementActivity"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".UI.Activity.FoodDetailsActivity"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".UI.Activity.SetChefActivity"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".UI.Activity.BookingDatails.BookingDetailsActivity"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".UI.Activity.Beater.BeaterActivity"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator" />
    </application>

</manifest>